<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  /* common section */
  .common__title {
    font-size: 30px;
    font-weight: bold;
    color: #001F51;
    text-align: center;
  }
  /* end common section */
  .container {
    max-width: 900px;
    margin: auto;
  }
  .gellery__area {
    background-color: white;
  }
  .gellery{
    
  }
  .gellery__section {
    margin-top: 60px;
    display: flex;
    justify-content: center;
  }
  .gellery__title {
    font-size: 40px;
    color: #001F51;
    text-align: center;
    font-weight: bold;
    padding-bottom: 10px;
  }
  .gellery__item__area{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 70px;
  }
  .gellery__item__area img{
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .gellery__zoom {
  position: relative;
  overflow: hidden;
}

.gellery__zoom img {
  width: 100%;
  transition: transform 0.2s ease;
  transform-origin: center;
  cursor: move;
}

.gellery__zoom.active img {
  transform: scale(2);
}
  
  
</style>
{% style %}

{% endstyle %}

<section class="gellery__area">
  <div class="gellery__section">
    <div class="container">
      <h1 class="gellery__title">{{ section.settings.gellery__title }}</h1>
    </div>
  </div>
  
  <div class="gellery__item__area container">
  {% for block in section.blocks %}
    {% if block.type == "gellery__image" %}
      <div class="gellery">
        <div class="gellery__image">
          {% if block.settings.gellery__image != blank %}
            <div class="gellery__zoom">
              {{ block.settings.gellery__image | image_url: width: 800 | image_tag }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
</section>


{% schema %}
  {
    "name": "Gellery",
    "settings": [
      {
        "type": "text",
        "id": "gellery__title",
        "default": "Our Proven Strategies for Driving Revenue Growth",
        "label": "Card Title"
      }
    ],
    "blocks": [
      {
        "name": "gellery__image",
        "type": "gellery__image",
        "settings": [
          {
            "type": "image_picker",
            "id": "gellery__image",
            "label": "Gellery Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gellery",
        "blocks": [
          {
            "type": "gellery__image"
          }
        ]
      }
    ]
  }
{% endschema %}



    <script>
  document.querySelectorAll('.gellery__zoom').forEach((zoomContainer) => {
    const img = zoomContainer.querySelector('img');

    zoomContainer.addEventListener('mousemove', (e) => {
      const rect = zoomContainer.getBoundingClientRect();
      const x = e.clientX - rect.left; 
      const y = e.clientY - rect.top;  
      
      const xPercent = x / rect.width * 100;
      const yPercent = y / rect.height * 100;

      img.style.transformOrigin = `${xPercent}% ${yPercent}%`;
      img.style.transform = 'scale(2)'; 
    });

    zoomContainer.addEventListener('mouseleave', () => {
      img.style.transform = 'scale(1)';
      img.style.transformOrigin = 'center center';
    });
  });
</script>

