<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  /* common section */
  .common__title {
    font-size: 30px;
    font-weight: bold;
    color: #001F51;
    text-align: center;
  }
  /* end common section */
  .container {
    max-width: 900px;
    margin: auto;
  }
  .result__section__area {
    background-color: white;
  }
  .result__section{
    border: 1px solid black;
  }
  .result__section__section {
    margin-top: 20px;
    display: flex;
    justify-content: center;
  }
  .result__section__title {
    font-size: 40px;
    color: #3D3D3D;
    text-align: center;
    font-weight: bold;
    padding-bottom: 10px;
    margin-top: 42px;
    margin-bottom: 30px;
  }
  .result__section__video--area{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  .video__wrapper iframe{
    width: 100%;
    height: 250px;
  }
  
  
</style>
{% style %}

{% endstyle %}

<section class="result__section__area container">
  <div class="result__section__section">
    <div class="container">
      <h1 class="result__section__title">{{ section.settings.result__section__title }}</h1>
    </div>
  </div>
  <div class="result__section__video--area">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when "video__url" %}
          <div class="video__wrapper">
            <iframe 
              src="{{ block.settings.video__url | replace: 'watch?v=', 'embed/' }}" 
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>


{% schema %}
  {
    "name": "Video Section",
    "settings": [
      {
        "type": "text",
        "id": "result__section__title",
        "default": "video",
        "label": "Video Section"
      }
    ],
    "blocks": [
      {
        "name": "video",
        "type": "video__url",
        "settings": [
          {
            "type": "video_url",
            "id": "video__url",
            "label": "Video",
            "accept": [
              "youtube",
              "vimeo"
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Video Section",
        "blocks": [{
          "type": "video__url"
        }]
      }
    ]
  }
{% endschema %}


